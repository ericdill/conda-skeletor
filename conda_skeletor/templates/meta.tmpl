package:
  name: {{ packagename }}
  version: {{ packageversion }}

source:
  git_url: {{ source_url }}
  git_rev: {{ source_rev }}

build:
  number: {{ build_number }}
  {% if build_string %}
  string: {{ build_string }}
  {% endif %}
  # TODO add entry points

requirements:
  build:
    - python{{ python_version_build }}{% for build_dep in build_deps %}
    - {{ build_dep }}{% endfor %}
  run:
    - python{{ python_version_build }}
    {% for run_dep in run_deps %}
    - {{ run_dep }}
    {% endfor %}

test:
  {% if import_deps %}
  requires:
    {% for import_dep in import_deps %}
    - {{ import_dep }}
    {% endfor %}
  {% endif %}

  {% if import_modules %}
  imports:
    {% for import_module in import_modules %}
    - {{ import_module }}
    {% endfor %}
  {% endif %}

  {% if test_commands %}
  commands:
    {% for test_command in test_commands %}
    - {{ test_command }}
    {% endfor %}
  {% endif %}

about:
  home: {{ home_url }}
  license: {{ license }}


